server {
	listen			80;
	server_name		vagrant-railo.dev;
	root			/sites/webroot;

	proxy_cache one;

	location / {
		proxy_set_header X-Forwarded-Host $host;
		proxy_set_header X-Forwarded-Server $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_pass http://127.0.0.1:8080/;
	}
}
